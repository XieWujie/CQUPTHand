<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FindActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/find_text"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:text="发现"
            android:textColor="#000000"
            android:textSize="27sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v4.view.ViewPager
            android:id="@+id/find_view_pager"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="190dp"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="95dp">
            <ImageView
                android:id="@+id/no_lesson_view"
                android:layout_width="30dp"
                android:src="@drawable/no_lesson"
                android:layout_height="30dp" />
            <TextView
                android:layout_toRightOf="@+id/no_lesson_view"
                android:layout_marginLeft="10dp"
                android:text="没课约"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="95dp">
            <ImageView
                android:id="@+id/have_classroom_view"
                android:layout_width="30dp"
                android:src="@drawable/have_classroom"
                android:layout_height="30dp" />
            <TextView
                android:layout_toRightOf="@+id/have_classroom_view"
                android:layout_marginLeft="10dp"
                android:text="空教室"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="95dp">
            <ImageView
                android:id="@+id/find_grade_view"
                android:layout_width="30dp"
                android:src="@drawable/find_grade"
                android:layout_height="30dp" />
            <TextView
                android:layout_toRightOf="@+id/find_grade_view"
                android:layout_marginLeft="10dp"
                android:text="考试查询"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"/>


    </LinearLayout>
    <fragment
        android:name="com.example.xiewujie.cqupthand.fragment.BottomFragment"
        android:id="@+id/find_fagment"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</RelativeLayout>