<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/log_in_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back_view"
        android:src="@drawable/back"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <TextView
        android:text="登陆"
        android:textSize="17sp"
        android:textColor="#fff5f5f6"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/log_in_view"
        android:layout_marginTop="93dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="107dp"
        android:layout_height="107dp" />
    <LinearLayout
        android:background="#ffffffff"
        android:layout_below="@+id/log_in_view"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <RelativeLayout
            android:layout_weight="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/user_id_view"
               android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/logo"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <EditText
                android:id="@+id/user_id_edit"
                android:layout_toRightOf="@+id/user_id_view"
                android:background="@null"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:hint="请输入学号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/user_secret_view"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_height="25dp" />
            <EditText
                android:id="@+id/user_secret_edit"
                android:layout_toRightOf="@+id/user_secret_view"
                android:background="@null"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:hint="请输入身份证后六位"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="15"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/log_in_text"
                android:text="登陆"
                android:gravity="center"
                android:background="@drawable/log_in_text_src"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>