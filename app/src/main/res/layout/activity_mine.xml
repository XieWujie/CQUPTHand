<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MineActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <com.example.xiewujie.cqupthand.tool.CircleImageView
            android:id="@+id/user_src"
            android:layout_width="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:src="@drawable/head_sre_1"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/user_nick_name"
            android:layout_below="@id/user_src"
            android:text="江户川柯南"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/user_nick_name"
            android:id="@+id/user_signature"
            android:text="真相只有一个"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_below="@+id/user_nick_name"
            android:layout_toRightOf="@+id/user_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/points_mall_view"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_me_store"
            android:layout_toLeftOf="@+id/points_mall_text"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_toLeftOf="@+id/dividing_line"
            android:id="@+id/points_mall_text"
            android:text="商城"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dividing_line"
            android:layout_centerInParent="true"
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"
            android:layout_height="70dp" />
        <ImageView
            android:id="@+id/sign_in_view"
            android:layout_toRightOf="@id/dividing_line"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_me_sign"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/sign_in_text"
            android:text="签到"
            android:layout_toRightOf="@+id/sign_in_view"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_marginRight="8dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/ic_me_store_view"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_me_store"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_toRightOf="@+id/ic_me_store_view"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:text="积分商城"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ic_me_arrow_store_view"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_me_arrow"
            android:layout_marginRight="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
    </RelativeLayout>
        <TextView
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/ic_me_help_view"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_me_help"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_toRightOf="@+id/ic_me_help_view"
                android:layout_centerInParent="true"
                android:text="帮一帮"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/ic_me_arrow_help_view"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_me_arrow"
                android:layout_marginRight="8dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </RelativeLayout>
        <TextView
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/ic_me_question_view"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_me_question"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_toRightOf="@+id/ic_me_question_view"
                android:layout_centerInParent="true"
                android:text="问一问"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/ic_me_arrow_question_view"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_width="35dp"
                android:src="@drawable/ic_me_arrow"
                android:layout_height="35dp" />
        </RelativeLayout>
        <TextView
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/ic_me_draft_view"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_me_draft"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_toRightOf="@+id/ic_me_draft_view"
                android:layout_centerInParent="true"
                android:text="草稿箱"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/ic_me_arrow_draft_view"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_me_arrow"
                android:layout_marginRight="8dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/ic_me_relate_me_view"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_me_relate_me"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_toRightOf="@+id/ic_me_relate_me_view"
            android:layout_centerInParent="true"
            android:text="与我有关"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ic_me_arrow_relate_me_view"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_me_arrow"
            android:layout_marginRight="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
    </RelativeLayout>
    <TextView
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/ic_me_setting_view"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_me_setting"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_toRightOf="@+id/ic_me_setting_view"
            android:layout_centerInParent="true"
            android:text="设置"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ic_me_arrow_setting_view"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_me_arrow"
            android:layout_marginRight="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
    </RelativeLayout>
    <TextView
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    </LinearLayout>
    <fragment
        android:id="@+id/ic_me_fragment"
        android:layout_alignParentBottom="true"
        android:name="com.example.xiewujie.cqupthand.fragment.BottomFragment"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

</RelativeLayout>