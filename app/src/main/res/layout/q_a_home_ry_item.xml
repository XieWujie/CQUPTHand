<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fefefe"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
    <com.example.xiewujie.cqupthand.tool.CircleImageView
        android:id="@+id/q_a_user_head_view"
        android:layout_centerVertical="true"
        app:src="@drawable/head_src"
        android:layout_width="30dp"
        android:layout_height="30dp" />
        <TextView
            android:id="@+id/q_a_user_nic_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/q_a_user_head_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/q_a_gender"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/q_a_user_nic_name"
            android:layout_marginStart="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/q_a_label"
        android:textColor="#7185fa"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="20dp" />
        <TextView
            android:id="@+id/q_a_head_title"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/q_a_detail"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/q_a_look_picture"
            android:layout_alignParentRight="true"
            android:text="查看图片"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_toRightOf="@+id/q_a_detail"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/q_a_integral"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/q_a_point"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/q_a_help_layout"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/help_view"
            android:src="@drawable/q_a_help"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_toRightOf="@id/help_view"
            android:layout_marginLeft="5dp"
            android:text="帮助"
            android:textColor="#7185fa"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:background="#f3f3f3"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>